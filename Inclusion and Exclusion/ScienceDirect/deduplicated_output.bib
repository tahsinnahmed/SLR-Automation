 volume = {64},
 year = {2022}
}

@article{LAZARUS2022e11142,
 abstract = {This article is about the manifestations of similarities between two seemingly distinct groups of Nigerians: cybercriminals and politicians. Which linguistic strategies do Twitter users use to express their opinions on cybercriminals and politicians? The study undertakes a qualitative analysis of ‘engaged’ tweets of an elite law enforcement agency in West Africa. We analyzed and coded over 100,000 ‘engaged’ tweets based on a component of mechanisms of moral disengagement (i.e., advantageous comparison), a linguistic device. The results reveal how respondents defend the actions of online fraudsters (\textquotedblleft the deviant group\textquotedblright ) by strategically comparing them to the wrongful acts of corrupt politicians (\textquotedblleft the respectable group\textquotedblright ). Similarly, the results show how respondents positioned this linguistic strategy to compare \textquotedblleft the powerless group\textquotedblright  (online fraudsters) and \textquotedblleft the powerful group\textquotedblright  (politicians) in society. Indeed, tweet responses suggest that the Economic and Financial Crimes Commission (EFCC) generally looks downwards for culprits (i.e., online fraudsters) while ignoring fraudulent politicians. We conclude that the process by which some actions are interpreted as a crime compared to others is a moral enterprise.},
 author = {Suleman Lazarus and Mark Button and Afe Adogame},
 doi = {https://doi.org/10.1016/j.heliyon.2022.e11142},
