 issn = {2949-7914},
 journal = {Journal of Economic Criminology},
 keywords = {Forensic accounting, White-collar crime, State-organised crime, Cross-border challenges, Velvet Claw tactics},
 pages = {100132},
 title = {{F}orensic accounting as an investigative tool: {I}nsights from the {F}TX and {Q}atargate},
