 doi = {https://doi.org/10.1016/j.dss.2023.113977},
 issn = {0167-9236},
 journal = {Decision Support Systems},
 keywords = {Spam, Broad phishing, Spear-phishing, Thematic dimensional framework, Unsupervised modeling, Text mining, NGram, Non-negative matrix factorization, Topic modeling},
